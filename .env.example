# WormGPT Qwen API - FREE TIER Deployment
# NO API KEY REQUIRED - Uses only free qwen/qwen-3-4b:free model

# === Server Configuration ===
PORT=4100
NODE_ENV=production

# === Domain Configuration ===
DOMAIN=your-project.railway.app
PROTOCOL=https

# === AI Configuration - FREE TIER ONLY ===
# NO API KEY NEEDED! 
# This deployment uses ONLY the free qwen/qwen-3-4b:free model
# OpenRouter provides this model 100% free with unlimited usage

# === Optional: For Higher Rate Limits ===
# If you want to add API keys later for higher limits:
# OPENROUTER_API_KEYS=key1,key2,key3

# === Rate Limiting Configuration ===

# Default tier (no API key): requests per minute per IP
RATE_LIMIT_DEFAULT=100

# Premium tier (with user API key): requests per minute  
RATE_LIMIT_PREMIUM=1000

# Unlimited tier (internal): requests per minute
RATE_LIMIT_UNLIMITED=100000

# === Caching Configuration ===

# Enable response caching (reduces API calls by 40-60%)
CACHE_ENABLED=true

# Cache TTL in seconds (1 hour default)
CACHE_TTL=3600

# === Redis Configuration (Optional) ===
# Add Redis plugin to Railway for better performance
# REDIS_URL=redis://localhost:6379

# === Context Management ===
MAX_CONTEXT_LENGTH=30000
MAX_CONVERSATION_MESSAGES=50

# === Security ===
JWT_SECRET=generate_a_very_long_random_secret_here_min_32_chars
COOKIE_NAME=wormgpt-session
CORS_ORIGIN=*

# === Performance ===
COMPRESSION_ENABLED=true
REQUEST_TIMEOUT=120000

# === Logging ===
LOG_LEVEL=info
METRICS_ENABLED=true
