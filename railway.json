{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install"]
        },
        "setup": {
          "cmds": [
            "mkdir -p volatile/config",
            "echo '{}' > volatile/config/config.json"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm run build:ts && npm start",
    "healthcheckPath": "/qwen/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  }
}
