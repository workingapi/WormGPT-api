{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install"]
        },
        "setup": {
          "cmds": [
            "mkdir -p volatile/config",
            "echo '{}' > volatile/config/config.json"
          ]
        }
      },
      "packages": ["redis"]
    }
  },
  "deploy": {
    "startCommand": "npm run build:ts && npm start",
    "healthcheckPath": "/qwen/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1,
    "scaling": {
      "min": 1,
      "max": 50,
      "cpu_threshold": 70,
      "memory_threshold": 80
    },
    "regions": ["us-east-1", "us-west-1", "eu-west-1"],
    "load_balancer": {
      "enabled": true,
      "algorithm": "round_robin",
      "sticky_sessions": false
    }
  },
  "services": {
    "redis": {
      "type": "redis",
      "version": "7",
      "memory": "1GB"
    }
  }
}
