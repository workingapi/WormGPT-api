{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install"]
        },
        "setup": {
          "cmds": [
            "mkdir -p volatile/config volatile/runtime scripts",
            "chmod +x scripts/railway-start.sh"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bash scripts/railway-start.sh",
    "healthcheckPath": "/qwen/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
